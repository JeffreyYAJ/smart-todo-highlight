{
  "name": "smartTodoHighlight",
  "displayName": "smart-todo-highlight",
  "description": "Highlight TODOs and FIXMEs by priority and aging",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.106.3"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["*"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "todoHighlighter.refresh",
        "title": "Refresh TODO Highlight"
      },
      {
        "command": "todoHighlighter.goto",
        "title": "Go to TODO"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "todoList",
          "name": "Smart TODOs"
        }
      ]
    }
  }
,
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
